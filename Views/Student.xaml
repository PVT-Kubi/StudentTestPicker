<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentTestPicker.Views.Student"
             x:Name="this">
    <Frame BindingContext="{x:Reference this}">
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Label Text="{Binding Name}"  FontSize="18" />
                <Label Text="{Binding Surname}" FontSize="22"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Obecny"/>
                <CheckBox IsChecked="{Binding Presence}" CheckedChanged="SwitchPresence"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Ile dni temu ostatnio pytany"/>
                <Label Text="{Binding AskedCount}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
